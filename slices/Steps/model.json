{
  "id": "steps",
  "type": "SharedSlice",
  "name": "Steps",
  "description": "Multi-step quote flow - use multiple variations for each step",
  "variations": [
    {
      "id": "start",
      "name": "Start (Step 0)",
      "docURL": "...",
      "version": "initial",
      "description": "Initial landing for quote flow - displays before step 1",
      "imageUrl": "",
      "primary": {
        "step_number": {
          "type": "Number",
          "config": {
            "label": "Step Number",
            "placeholder": "0"
          }
        },
        "step_title": {
          "type": "Text",
          "config": {
            "label": "Step Title",
            "placeholder": "Start"
          }
        },
        "start_image": {
          "type": "Link",
          "config": {
            "label": "Start Image (SVG File Upload)",
            "select": "media"
          }
        },
        "start_heading": {
          "type": "Text",
          "config": {
            "label": "Heading",
            "placeholder": "Ready to get started?"
          }
        },
        "start_description": {
          "type": "StructuredText",
          "config": {
            "label": "Description",
            "placeholder": "Let's gather some details about your shipment...",
            "single": "paragraph,strong,em"
          }
        },
        "start_button_text": {
          "type": "Text",
          "config": {
            "label": "Button Text",
            "placeholder": "Start Quote"
          }
        },
        "loading_message": {
          "type": "Text",
          "config": {
            "label": "Loading Message",
            "placeholder": "Loading your quote form..."
          }
        },
        "loading_submessage": {
          "type": "Text",
          "config": {
            "label": "Loading Submessage",
            "placeholder": "Please wait a moment"
          }
        }
      },
      "items": {}
    },
    {
      "id": "cards",
      "name": "Cards (Step 1)",
      "docURL": "...",
      "version": "initial",
      "description": "Step 1: Location selection cards",
      "imageUrl": "",
      "primary": {
        "step_number": {
          "type": "Number",
          "config": {
            "label": "Step Number",
            "placeholder": "1"
          }
        },
        "step_title": {
          "type": "Text",
          "config": {
            "label": "Step Title",
            "placeholder": "Location"
          }
        }
      },
      "items": {
        "card_label": {
          "type": "Text",
          "config": {
            "label": "Card Label",
            "placeholder": "Australia"
          }
        },
        "card_value": {
          "type": "Text",
          "config": {
            "label": "Card Value",
            "placeholder": "australia"
          }
        },
        "has_link_icon": {
          "type": "Boolean",
          "config": {
            "label": "Show Link Icon",
            "placeholder_false": "No Icon",
            "placeholder_true": "Show Icon",
            "default_value": false
          }
        },
        "card_image": {
          "type": "Image",
          "config": {
            "label": "Card Background Image",
            "constraint": {},
            "thumbnails": []
          }
        },
        "is_text_option": {
          "type": "Boolean",
          "config": {
            "label": "Text Option (not a card)",
            "placeholder_false": "Full Card",
            "placeholder_true": "Text Option Only",
            "default_value": false
          }
        }
      }
    },
    {
      "id": "form",
      "name": "Form (Step 2)",
      "docURL": "...",
      "version": "initial",
      "description": "Step 2: Dynamic form fields",
      "imageUrl": "",
      "primary": {
        "step_number": {
          "type": "Number",
          "config": {
            "label": "Step Number",
            "placeholder": "2"
          }
        },
        "step_title": {
          "type": "Text",
          "config": {
            "label": "Step Title",
            "placeholder": "Details"
          }
        },
        "form_heading": {
          "type": "Text",
          "config": {
            "label": "Form Heading",
            "placeholder": "DETAILS"
          }
        }
      },
      "items": {
        "field_label": {
          "type": "Text",
          "config": {
            "label": "Field Label",
            "placeholder": "Full Name"
          }
        },
        "field_name": {
          "type": "Text",
          "config": {
            "label": "Field Name (ID)",
            "placeholder": "fullName (must be unique, no spaces)"
          }
        },
        "field_type": {
          "type": "Select",
          "config": {
            "label": "Field Type",
            "placeholder": "Select field type",
            "options": [
              "text",
              "email",
              "tel",
              "number",
              "date",
              "textarea",
              "radio",
              "select",
              "address"
            ],
            "default_value": "text"
          }
        },
        "field_placeholder": {
          "type": "Text",
          "config": {
            "label": "Placeholder Text",
            "placeholder": "Enter first name..."
          }
        },
        "field_required": {
          "type": "Boolean",
          "config": {
            "label": "Required Field",
            "placeholder_false": "Optional",
            "placeholder_true": "Required",
            "default_value": true
          }
        },
        "field_options": {
          "type": "Text",
          "config": {
            "label": "Options (for radio/select/number units)",
            "placeholder": "Road Freight, Air Freight, Ocean Freight OR kg, lbs, ton"
          }
        },
        "field_unit": {
          "type": "Text",
          "config": {
            "label": "Unit Label (for number fields)",
            "placeholder": "kg, mm, box (default unit if field_options provided)"
          }
        },
        "field_column": {
          "type": "Select",
          "config": {
            "label": "Column Position",
            "placeholder": "Select column",
            "options": ["left", "right", "full"],
            "default_value": "left"
          }
        },
        "field_width": {
          "type": "Select",
          "config": {
            "label": "Field Width",
            "placeholder": "Select width",
            "options": ["full", "half", "third", "quarter", "fifth"],
            "default_value": "full"
          }
        }
      }
    },
