{
  "id": "author",
  "label": "Author",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID",
          "placeholder": "author-name-slug"
        }
      },
      "name": {
        "type": "Text",
        "config": {
          "label": "Full Name",
          "placeholder": "John Smith"
        }
      },
      "role": {
        "type": "Text",
        "config": {
          "label": "Role/Title",
          "placeholder": "Senior Logistics Manager"
        }
      },
      "bio": {
        "type": "StructuredText",
        "config": {
          "label": "Biography",
          "placeholder": "Author biography",
          "allowTargetBlank": true,
          "multi": "paragraph,strong,em,hyperlink"
        }
      },
      "profile_photo": {
        "type": "Image",
        "config": {
          "label": "Profile Photo",
          "constraint": {
            "width": 400,
            "height": 400
          },
          "thumbnails": []
        }
      },
      "email": {
        "type": "Text",
        "config": {
          "label": "Email (Optional)",
          "placeholder": "author@mach1logistics.com.au"
        }
      },
      "linkedin": {
        "type": "Link",
        "config": {
          "label": "LinkedIn Profile (Optional)",
          "placeholder": "LinkedIn URL",
          "select": null
        }
      }
    }
  }
}

